@inject SignInManager<KTUser> SignInManager
    @{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }

    <ul class="nav nav-tabs tabs-alt nav-responsive-xl">
        <li class="nav-link"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile"
                asp-page="./Index">Profile</a></li>
        <li class="nav-link"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)"
                id="change-password" asp-page="./ChangePassword">Password</a></li>
        @if (hasExternalLogins)
        {
        <li id="external-logins" class="nav-link"><a id="external-login"
                class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)"
                asp-page="./ExternalLogins">External logins</a></li>
        }
        <li class="nav-link"><a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"
                id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
        <li class="nav-link"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data"
                asp-page="./PersonalData">Personal data</a></li>

    </ul>
